<script>
  function mostrar(id) {
    document.querySelectorAll(".card").forEach(el => el.classList.add("hidden"));
    document.getElementById(id).classList.remove("hidden");
  }

  function logout() {
    localStorage.removeItem("logado");
    window.location.href = "login.html";
  }
